html 
    head 
        link(rel='stylesheet', type='text/css', href='/static/css/style.css')
        link(rel='icon', type='image/x-icon', href='/static/img/favicon.ico')
        title=title 
    body 
        div#navbar
            a#logo(href='/')
                img(src='/static/img/logo.png', width=60, height=40)
            div#navbar-right
                a(href='/') Home
                if isGame
                    a.active(href='/games') Games
                else
                    a(href='/games') Games

                if loggedIn
                    a(href='/accountPage') Your Account
                else 
                    a(href='/login') Login
        div#content
            h1=title
            if errors
                p.error Please correct the following errors before re-submitting!
                ul
                    each val in errors 
                        li.error=val
            if isGame
                a.active(href='/games') Back to Games
            else 
                a.active(href='/users') Back to Users
            br
            br
            form(method="post")
                if isGame
                    label(for="name") Game Name:
                    br
                    input(type="text", name="name", value=name)
                    br
                    br

                    label(for="genre") Genre:
                    br
                    input(type="text", name="genre", value=genre)
                    br
                    br

                    label(for="image") Image URL:
                    br
                    input(type="text", name="image", value=image)
                    br
                    br

                    label(for="rating") Rating:
                    br
                    input(type="number", name="rating", value=rating, min=0, max=5)
                    br
                    br

                    label(for="start") Start Month and Year (YYYY-MM):
                    br
                    input(type="text", name="start", value=start)
                    br
                    br

                    label(for="end") End Month and Year (YYYY-MM OR leave blank for ongoing):
                    br
                    input(type="text", name="end", value=end)
                    br
                    br

                    label(for="review") Thoughts:
                    br
                    textarea(id="review", name="review", rows="10", cols="50")
                        | #{review}
                    br
                    br

                    if isEditing 
                        input(type="submit" name="submit" value="Edit Game")
                    else
                        input(type="submit" name="submit" value="Add Game")
                else 
                    label(for="username") Username should be between 4-25 characters long and include at least one number. No special characters:
                    br
                    input(type="text", name="username", value=username)
                    br
                    br

                    label(for="password") Password should be at least 12 characters and include at least one uppercase, one lowercase, one number, and a symbol:
                    br
                    input(type="password", name="password")
                    br
                    br

                    label(for="passwordConfirm") Confirm Password:
                    br
                    input(type="password", name="passwordConfirm")
                    br
                    br

                    label(for="email") Email:
                    br
                    input(type="text", name="email", value=email)
                    br
                    br

                    label(for="secQuestion") Security Question:
                    br
                    select(name="secQuestion")
                        option(value="Select a question..." selected) Select a question...
                        option(value="The name of your first pet?") The name of your first pet?
                        option(value="Make and model of your first car?") Make and model of your first car?
                        option(value="What city did you want to grow up in") What city did you want to grow up in?
                    br
                    br

                    label(for="answer") Answer:
                    br
                    input(type="text", name="answer")
                    br
                    br

                    input(type="submit" name="submit" value="Create Account")